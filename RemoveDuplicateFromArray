public class Solution {
    public int RemoveDuplicates(int[] nums) {

        int n = nums.Length;
        if (n <= 1)
            return n;
		
      	// Start from the second element
        int idx = 0; 
        for (int i = 1; i < n; i++) {
            if (i < n-1 && nums[i] == nums[i+1]) {
                continue;
            }
            else
            {
                nums[idx] = nums[i];
                idx++;
            }
        }
        return idx;
        
    }
}
